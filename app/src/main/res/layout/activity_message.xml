<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:paddingBottom="59dp">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/tool_bar"
            android:id="@+id/toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:text="Clairvoyance Preparing"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            app:layout_constraintTop_toBottomOf="@id/head"
            android:text="19/07/2021  08:51:41 - 7HR9EY9L02"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:id="@+id/line"
            app:layout_constraintTop_toBottomOf="@id/date"
            android:layout_marginTop="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:text="Clairvoyance Preparing Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec fringilla quam eu faci lisis mollis. Clairvoyance Preparing Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec fringilla quam eu faci lisis mollis. Clairvoyance Preparing Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec fringilla quam eu faci lisis mollis. "
            android:textSize="18sp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="19dp"
            android:lineHeight="26dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:src="@drawable/human1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message"
            android:layout_marginTop="4dp"
            android:layout_marginStart="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aleyna"
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:id="@+id/line2"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hearts"
            android:src="@drawable/hearts"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="41dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:background="@drawable/input_back"
            app:layout_constraintTop_toBottomOf="@+id/hearts"
            android:layout_marginHorizontal="16dp"
            android:hint="Your commnet..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="38dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send"
            app:layout_constraintTop_toBottomOf="@id/comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="26dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>